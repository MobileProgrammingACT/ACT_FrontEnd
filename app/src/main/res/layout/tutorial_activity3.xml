                    <TextView
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_columnSpan="4"
                        android:text="내 감정은 내 삶에 방해된다"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#000000" />

                    <RadioGroup
                        android:id="@+id/radioGroup_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:layout_columnSpan="5">

                        <RadioButton
                            android:id="@+id/radioButton_never_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전혀"
                            android:layout_marginEnd="10dp"/>

                        <RadioButton
                            android:id="@+id/radioButton_rarely_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="드물게"
                            android:layout_marginEnd="10dp"/>

                        <RadioButton
                            android:id="@+id/radioButton_sometimes_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가끔"
                            android:layout_marginEnd="10dp"/>

                        <RadioButton
                            android:id="@+id/radioButton_often_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="자주"
                            android:layout_marginEnd="10dp"/>

                        <RadioButton
                            android:id="@+id/radioButton_always_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="항상"
                            android:layout_marginEnd="10dp"/>

                    </RadioGroup>

                </GridLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="#E2E2E2"
        android:text="제출하기"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>

</LinearLayout>