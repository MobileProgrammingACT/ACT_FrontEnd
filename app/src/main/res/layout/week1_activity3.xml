<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--설명이 들어갈 자리-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WEEK1"
                android:textSize="50dp"/>

            <!--활동에 진입하면 노래가 나오고 버튼을 누르면 노래가 꺼지게, 활동에서 나가도 음악이 꺼지게-->
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/musicButton"
                android:padding="0dp"
                android:src="@drawable/music_states"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <!--나중에 이미지 버튼으로 바꿀예정-->
            <Button
                android:id="@+id/explanation"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="설명"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회피의 순환"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="아래의 빈칸에 당신 내적의 힘듦, 회피 방법, 그리고 예상되는 결과를 채워봅시다.\n 그리고 어려운 경험으로부터 무엇을 배웠는지, 회피하기 위해 무엇을 하였는지, 회피함으로써 어떤 대가가 있었는지 적어봅시다." />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <!--활동이 들어갈 자리-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1.5">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#eeeeee">

            <!--1째줄 (열이름)-->
            <TableRow
                android:layout_marginBottom="5dp">
                <TextView
                    android:text="힘든 경험"
                    android:textSize="20dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:text="회피 방법"
                    android:textSize="20dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:text="예상 결과"
                    android:textSize="20dp"
                    android:layout_gravity="center"/>
            </TableRow>

            <!--2째줄 (예시)-->
            <TableRow
                android:minHeight="80dp">
                <TextView
                    android:text="예) 지루함 외로움\n 같은 힘든 감정"/>
                <TextView
                    android:text="게임, TV 보기"/>
                <TextView
                    android:text="학습이나 취업에\n 방해"/>
            </TableRow>

            <!--3째줄-->
            <TableRow
                android:minHeight="80dp">
                <EditText
                    android:hint="예) 지루함 외로움\n 같은 힘든 감정"
                    android:textSize="14dp"
                    android:background="@null"
                    android:maxLines="3"/>
                <EditText
                    android:hint="게임, TV 보기"
                    android:textSize="14dp"
                    android:background="@null"
                    android:maxLines="3"/>
                <EditText
                    android:hint="학습이나 취업에\n 방해"
                    android:textSize="14dp"
                    android:background="@null"
                    android:maxLines="3"/>
            </TableRow>

            <!--4째줄-->
            <TableRow
                android:minHeight="80dp">
                <EditText
                    android:hint="예) 지루함 외로움\n 같은 힘든 감정"
                    android:textSize="14dp"
                    android:background="@null"
                    android:maxLines="3"/>
                <EditText
                    android:hint="게임, TV 보기"
                    android:textSize="14dp"
                    android:background="@null"
                    android:maxLines="3"/>
                <EditText
                    android:hint="학습이나 취업에\n 방해"
                    android:textSize="14dp"
                    android:background="@null"
                    android:maxLines="3"/>

            </TableRow>

            <!--5째줄-->
            <TableRow
                android:minHeight="80dp">
                <EditText
                    android:hint="예) 지루함 외로움\n 같은 힘든 감정"
                    android:textSize="14dp"
                    android:background="@null"
                    android:maxLines="3"/>
                <EditText
                    android:hint="게임, TV 보기"
                    android:textSize="14dp"
                    android:background="@null"
                    android:maxLines="3"/>
                <EditText
                    android:hint="학습이나 취업에\n 방해"
                    android:textSize="14dp"
                    android:background="@null"
                    android:maxLines="3"/>
            </TableRow>

            <!--6째줄-->
            <TableRow
                android:minHeight="80dp">
                <EditText
                    android:hint="예) 지루함 외로움\n 같은 힘든 감정"
                    android:textSize="14dp"
                    android:background="@null"
                    android:maxLines="3"/>
                <EditText
                    android:hint="게임, TV 보기"
                    android:textSize="14dp"
                    android:background="@null"
                    android:maxLines="3"/>
                <EditText
                    android:hint="학습이나 취업에\n 방해"
                    android:textSize="14dp"
                    android:background="@null"
                    android:maxLines="3"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <!--하단 메뉴바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="#cccccc"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/menuBookmark"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bookmark" />

            <ImageView
                android:id="@+id/menuHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/menuSetting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/settings"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>